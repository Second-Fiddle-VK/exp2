pipeline{
	agent any
	tools{
		gradle 'gradle'
		jdk 'JDK'
	}
	stages{
		stage('Checkout'){
			steps{
				git 'https://github.com/Second-Fiddle-VK/exp2.git"
			}
		}
		stage('Build'){
			steps{
				sh 'gradle build'
			}
		}
		stage('Test'){
			steps{
				sh 'gradle test'
			}
		}
		stage('Run Application'){
			steps{
				sh 'gradle run'
			}
		}
	}
	post{
		success{
			echo 'Build and Run successfully'
		}
		failure{
			echo 'Build/Run Failed'
		}
	}
}
